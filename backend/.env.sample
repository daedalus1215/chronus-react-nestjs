# Database Configuration
DATABASE=db.sqlite

# JWT Authentication
JWT_SECRET=your-secret-key-here-change-in-production
JWT_EXPIRES_IN=7d
COOKIE_KEY=your-cookie-key-here-change-in-production

# Environment
NODE_ENV=development

# Security (optional)
# Set to false to disable public registration (recommended for production single-user apps)
ALLOW_REGISTRATION=true
# Comma-separated list of allowed CORS origins (omit to allow all origins, e.g. in development)
# FRONTEND_ORIGIN=https://your-domain.com,https://www.your-domain.com

# Server Configuration (optional)
PORT=3000

# Hermes API (for text-to-speech)
HERMES_API_URL=http://localhost:8000

# SMTP Configuration (for email reminders)
# Gmail example:
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# SSL Configuration (optional)
# SSL_KEYFILE=/path/to/server.key
# SSL_CERTFILE=/path/to/server.crt
